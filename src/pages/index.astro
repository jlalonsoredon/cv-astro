---
import Button from "../components/button.astro";
import Projects from "../components/home/projects.astro";
import Separator from "../components/home/separator.astro";
import Writings from "../components/home/experiences.astro";
import Studies from "../components/home/studies.astro";
import Layout from "../layouts/main.astro";
import { SITE } from "../config/site";
import { CATEGORIES } from "../config/categories";

// Fetch con manejo de errores
let introPosts: any[] = [];

try {
  if (SITE.apiBase && !SITE.apiBase.includes('localhost')) {
    const intro = await fetch(`${SITE.apiBase}/wp/v2/posts?categories=${CATEGORIES.INTRO}&_embed`);
    if (intro.ok) {
      introPosts = await intro.json();
      if (!Array.isArray(introPosts)) {
        introPosts = [];
      }
    }
  }
} catch (error) {
  console.warn('Error fetching intro posts:', error);
  introPosts = [];
}

// util: decodificar entidades HTML manteniendo las etiquetas
const decodeHtmlEntities = (html: string) => {
  return String(html || "")
    .replace(/\\u003C/g, "<")
    .replace(/\\u003E/g, ">")
    .replace(/&hellip;/gi, "â€¦")
    .replace(/&nbsp;/gi, " ")
    .replace(/&amp;/gi, "&")
    .replace(/&quot;/gi, '"')
    .replace(/&#039;/gi, "'")
    .replace(/&lt;/gi, "<")
    .replace(/&gt;/gi, ">");
};
